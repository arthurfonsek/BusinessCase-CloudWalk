# Forkly Backend Environment Configuration
# Copy this file to .env and fill in your values

# ===== SECURITY =====
# Django Secret Key (generate a new one for production)
DJANGO_SECRET=your-super-secret-key-here

# Database Configuration
DATABASE_URL=sqlite:///db.sqlite3
# For PostgreSQL: postgresql://user:password@localhost:5432/forkly_db
# For MySQL: mysql://user:password@localhost:3306/forkly_db

# JWT Configuration
JWT_ACCESS_TOKEN_LIFETIME=60
JWT_REFRESH_TOKEN_LIFETIME=10080
JWT_ALGORITHM=HS256

# ===== EXTERNAL SERVICES =====
# OpenAI API Key for AI features
OPENAI_API_KEY=your-openai-api-key-here

# Email Configuration
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password
DEFAULT_FROM_EMAIL=noreply@forkly.com

# ===== CORS & SECURITY =====
# Allowed origins for CORS (comma-separated)
ALLOWED_ORIGINS=http://localhost:43495,http://127.0.0.1:43495,https://yourdomain.com

# Allowed hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1,yourdomain.com

# ===== RATE LIMITING =====
# Rate limiting configuration
RATE_LIMIT_ENABLED=True
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST_SIZE=10

# ===== LOGGING =====
# Log level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/forkly.log

# ===== CACHING =====
# Redis URL for caching (optional)
REDIS_URL=redis://localhost:6379/0

# ===== MONITORING =====
# Sentry DSN for error tracking (optional)
SENTRY_DSN=your-sentry-dsn-here

# ===== FRONTEND =====
# Frontend base URL for invite links
FRONTEND_BASE_URL=http://localhost:43495

# ===== PRODUCTION SETTINGS =====
# Set to False in production
DEBUG=True

# Security settings for production
SECURE_SSL_REDIRECT=False
SECURE_HSTS_SECONDS=0
SECURE_HSTS_INCLUDE_SUBDOMAINS=False
SECURE_HSTS_PRELOAD=False
SECURE_CONTENT_TYPE_NOSNIFF=True
SECURE_BROWSER_XSS_FILTER=True
X_FRAME_OPTIONS=DENY
